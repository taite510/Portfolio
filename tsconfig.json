{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "jsxImportSource": "@emotion/react",
    "typeRoots": ["node_modules/@types", "src/types"]
  }
}
